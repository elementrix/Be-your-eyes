<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="103dp"
        android:layout_height="152dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="149dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dog" />

    <Button
        android:id="@+id/bt_get_contact"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="185dp"
        android:backgroundTint="#008E1616"
        android:backgroundTintMode="screen"
        android:text="긴급 연락처 설정"
        android:textColor="#DDE00A0A"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/EP"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="205dp"
        android:backgroundTint="#7CFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <EditText
        android:id="@+id/txtEP"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="도착지를 입력하세요"
        android:textColor="#D3333333"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject" />

    <Button
        android:id="@+id/complete"
        android:layout_width="113dp"
        android:layout_height="51dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#00FFFFFF"
        android:text="경로검색"
        android:textColor="#C4575757"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEP" />

    <TextView
        android:id="@+id/subject"
        android:layout_width="316dp"
        android:layout_height="52dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/annie_use_your_telescope"
        android:text="Be Your Eyes"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#9A000000"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/bt_get_contact"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dangericon" />

</androidx.constraintlayout.widget.ConstraintLayout>